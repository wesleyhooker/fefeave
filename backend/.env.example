NODE_ENV=development
PORT=3000
LOG_LEVEL=info
API_PREFIX=/api

# Auth: off | dev_bypass | cognito
# Default: off (no auth). Use dev_bypass ONLY for local development.
AUTH_MODE=off

# When AUTH_MODE=dev_bypass (local dev only - NEVER in production)
# AUTH_MODE=dev_bypass
# AUTH_DEV_BYPASS_USER_ID=dev-user-123
# AUTH_DEV_BYPASS_EMAIL=dev@example.com
# AUTH_DEV_BYPASS_ROLE=OPERATOR
# AUTH_DEV_ALLOW_HEADER_OVERRIDE=false   # Set true to allow x-dev-user header (security risk)

# When AUTH_MODE=cognito
# COGNITO_REGION=us-west-2
# COGNITO_USER_POOL_ID=us-west-2_xxxxx
# COGNITO_APP_CLIENT_ID=xxxxx

# Database (optional - use DATABASE_URL or split vars)
# DATABASE_URL=postgres://user:password@localhost:5432/fefeave
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=fefeave
# DB_USER=fefeave
# DB_PASSWORD=secret
